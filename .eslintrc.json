// https://eslint.org/docs/rules/           правила

{
    "env": {
        "browser": true,
        "es2021": true
    },
    "ignorePatterns": [
        "karma.conf.js",
        "webpack.config.js"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "import",
        "@typescript-eslint"
    ],
    "rules": {
        "array-bracket-newline": [0],
        "array-bracket-spacing": [1],
        "array-element-newline": [1, {
                "ArrayExpression": "consistent",
                "ArrayPattern": {"multiline": true}
            }
        ],
        "arrow-parens": [1, "as-needed", {"requireForBlockBody": false}],
        "arrow-spacing": [1, { "before": true, "after": true }],
        "block-spacing": [1, "never"],
        "brace-style": [1, "1tbs", {"allowSingleLine": true}],
        "comma-dangle": [1,
            {
                "arrays": "always-multiline",
                "objects": "always-multiline",
                "imports": "always-multiline",
                "exports": "always-multiline",
                "functions": "never"
            }
        ],
        "comma-spacing": [1, {
            "before": false,
            "after": true
        }],
        "comma-style": [1],
        "computed-property-spacing": [0],
        "dot-location": [0],
        "eol-last": [1],
        "func-call-spacing": [0],
        "function-call-argument-newline": [1, "consistent"],
        "function-paren-newline": [1, "multiline-arguments"],
        "generator-star-spacing": [1, {"before": false, "after": true}],
        "implicit-arrow-linebreak": [1, "beside"],
        "jsx-quotes": [1, "prefer-single"],
        "key-spacing": [1, {
            "beforeColon": false,
            "afterColon": true
        }],
        "keyword-spacing": [1, {
            "before": true,
            "after": true
        }],
        "linebreak-style": ["warn", "windows"],
        "lines-around-comment": [0],
        "lines-between-class-members": [1, "always", {"exceptAfterSingleLine": true}],
        // https://eslint.org/docs/rules/indent
        "indent": ["warn", 4, {
            "SwitchCase": 1
        }],
        "max-statements-per-line": [1, {"max": 3}],
        "new-parens": [1, "always"],
        "newline-per-chained-call": [1, {
            "ignoreChainWithDepth": 2
        }],
        "no-extra-parens": [0],
        "no-mixed-spaces-and-tabs": [1],
        "no-multi-spaces": [1],
        "no-multiple-empty-lines": [1,
            {
                "max": 1,
                "maxBOF": 0,
                "maxEOF": 0
            }
        ],
        "no-tabs": [1],
        "no-trailing-spaces": [1],
        "no-whitespace-before-property": [1],
        "nonblock-statement-body-position": [1],
        "object-curly-newline": [1, {
            "ObjectPattern":  {"consistent": true},
            "ObjectExpression": {"consistent": true},
            "ImportDeclaration": {"consistent": true},
            "ExportDeclaration": {"consistent": true}
        }],
        "object-curly-spacing": [1],
        "object-property-newline": [1, {"allowAllPropertiesOnSameLine": true}],
        "operator-linebreak": [1, "before"],
        "prefer-spread": "off",
        "padded-blocks": [0],
        // https://eslint.org/docs/rules/padding-line-between-statements
        "padding-line-between-statements": [0],
        "prefer-rest-params": "off",
        "quotes": [1, "single"],
        "rest-spread-spacing": [1],
        "semi": [1],
        "semi-spacing": [1, {"before": false, "after": true}],
        "semi-style": [1],
        "space-before-blocks": [1],
        "space-before-function-paren": [1, {
            "anonymous": "always",
            "named": "never",
            "asyncArrow": "always"
        }],
        "space-in-parens": [1, "never"],
        "space-infix-ops": [0],
        "space-unary-ops": [1, {
            "words": true,
            "nonwords": false
        }],
        "switch-colon-spacing": [1, {
            "after": true,
            "before": false
        }],
        "template-curly-spacing": [1],
        "template-tag-spacing": [1],
        "unicode-bom": [0],
        "wrap-iife": [1, "inside", {"functionPrototypeMethods": true}],
        "wrap-regex": [1],
        "yield-star-spacing": [1, {
            "before": false,
            "after": true
        }],

        "no-console": "warn",
        "no-empty": "off",
        "no-use-before-define": ["off"],
        "no-unused-vars": "off",
        "arrow-body-style": [0],
        "prefer-const": "warn",
        "max-len": [1, 180],
        "no-shadow": "off",
        "no-undef": [0],

        "@typescript-eslint/no-use-before-define": [0],
        "@typescript-eslint/no-unused-vars": [1],
        "@typescript-eslint/explicit-module-boundary-types": [0],
        "@typescript-eslint/no-empty-interface": [1,
            {
                "allowSingleExtends": false
            }
        ],
        "@typescript-eslint/no-non-null-assertion": 0,
        "@typescript-eslint/no-empty-function": 0,
        "@typescript-eslint/no-explicit-any": 0,
        "@typescript-eslint/no-inferrable-types": [0],
        "@typescript-eslint/ban-types": [0],

        "import/extensions": [0, "always"],
        "import/prefer-default-export": "off",
        "import/order": 0,
        "import/no-named-as-default": [0]
    }
}
